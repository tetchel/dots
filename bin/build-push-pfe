#!/usr/bin/env bash

set -ex
cd ~/programs/codewind/src/pfe

set +x
branch=$(git branch 2>/dev/null | grep '^*' | colrm 1 2)
echo "Git branch is '$branch'"

username=timetchells
tag="codewind-pfe:$branch"
user_tag="${username}/${tag}"

set -x 

./build Dockerfile_x86_64
docker tag codewind-pfe-amd64:latest ${user_tag}
docker push ${user_tag}

cd -

set +x
echo "Pushed ${user_tag}"
