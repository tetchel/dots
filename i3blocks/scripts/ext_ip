#!/bin/bash

EXT_IP=$(curl -sfL ifconfig.me/ip)
logfile="${0}.log"

if [[ $? -eq 0 ]]; then
    # got a valid response
    echo "$EXT_IP" | tee -a $logfile
    echo "$EXT_IP" | tee -a $logfile
#    echo "#00FF00"
else
    echo "Offline" | tee -a $logfile
    echo "NoInet" | tee -a $logfile
#    echo "#FF0000"
fi

# copy the value when you click on it (requires xclip)
# case $BLOCK_BUTTON in
#     3) echo "$IP" | xclip ;;
#     *) echo "$IP" ;;
# esac
